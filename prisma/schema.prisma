model User {
  id            String    @id @default(cuid())
  username      String?   @unique // ë¡œê·¸ì¸ìš© ì•„ì´ë””
  nickname      String?   @unique // í‘œì‹œìš© ë‹‰ë„¤ì„
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String? // ìì²´ íšŒì›ê°€ì…ìš© ë¹„ë°€ë²ˆí˜¸ í•´ì‹œ
  role          String    @default("user")

  isDisabled Boolean   @default(false) // ê³„ì • ì •ì§€ ì—¬ë¶€
  bannedAt   DateTime?
  banReason  String?

  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  comments      Comment[]
  reports       Report[]
  notifications Notification[]
  etcEvents     EtcEvent[]
  favorites     Favorite[]
